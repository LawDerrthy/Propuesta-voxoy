<Window x:Class="InventarioApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesión - Sistema de Inventarios" 
        Height="400" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Título -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Sistema de Inventarios" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <TextBlock Text="Iniciar Sesión" 
                       FontSize="16" 
                       HorizontalAlignment="Center"
                       Foreground="#FF666666"/>
        </StackPanel>
        
        <!-- Formulario de Login -->
        <StackPanel Grid.Row="1" Margin="40,0">
            <Label Content="Correo Electrónico:"/>
            <TextBox x:Name="txtEmail" 
                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Label Content="Contraseña:"/>
            <PasswordBox x:Name="txtContraseña" 
                         PasswordChanged="txtContraseña_PasswordChanged"/>
            
            <Button Content="Iniciar Sesión" 
                    Click="btnIniciarSesion_Click"
                    Width="150"
                    Margin="0,20,0,0"/>
            
            <TextBlock x:Name="lblMensaje" 
                       Foreground="Red" 
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       TextWrapping="Wrap"
                       FontSize="12"/>
            
            <!-- Enlace a Registro -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <TextBlock Text="¿No tienes una cuenta? " 
                           VerticalAlignment="Center"/>
                <TextBlock Text="Registrarse" 
                           Foreground="Blue" 
                           TextDecorations="Underline"
                           Cursor="Hand"
                           MouseLeftButtonDown="Registrarse_MouseLeftButtonDown"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Pie de página -->
        <StackPanel Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <TextBlock Text="© 2024 Sistema de Inventarios" 
                       FontSize="10" 
                       Foreground="#FF999999"
                       Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>

