<Window x:Class="InventarioApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Inventarios - Principal" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Barra superior -->
        <Border Grid.Row="0" Background="#FF0078D4" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Sistema de Inventarios" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="lblUsuario" 
                               FontSize="14" 
                               Foreground="LightGray"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="Cerrar Sesión" 
                        Click="btnCerrarSesion_Click"
                        Style="{StaticResource DangerButton}"
                        Padding="15,8"/>
            </Grid>
        </Border>
        
        <!-- Contenido principal -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Bienvenida -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock x:Name="lblBienvenida" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Text="¡Bienvenido al Sistema de Inventarios!"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Esta es la ventana principal. Aquí se implementarán las funcionalidades del sistema de inventarios."
                           FontSize="16" 
                           HorizontalAlignment="Center"
                           Foreground="#FF666666"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
            
            <!-- Panel de información -->
            <Border Grid.Row="1" 
                    BorderBrush="#FFCCCCCC" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Funcionalidades a implementar:" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Ellipse Width="10" Height="10" Fill="#FF28A745" Margin="0,0,10,0"/>
                        <TextBlock Text="Gestión de Productos" FontSize="14"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Ellipse Width="10" Height="10" Fill="#FF28A745" Margin="0,0,10,0"/>
                        <TextBlock Text="Control de Stock" FontSize="14"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Ellipse Width="10" Height="10" Fill="#FF28A745" Margin="0,0,10,0"/>
                        <TextBlock Text="Reportes de Inventario" FontSize="14"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Ellipse Width="10" Height="10" Fill="#FF28A745" Margin="0,0,10,0"/>
                        <TextBlock Text="Historial de Movimientos" FontSize="14"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Ellipse Width="10" Height="10" Fill="#FF28A745" Margin="0,0,10,0"/>
                        <TextBlock Text="Gestión de Proveedores" FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Pie de página -->
        <Border Grid.Row="2" Background="#FFF8F9FA" Padding="10">
            <TextBlock Text="© 2024 Sistema de Inventarios - Versión 1.0" 
                       FontSize="10" 
                       Foreground="#FF666666"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>