<Window x:Class="InventarioApp.Views.RegistroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrarse - Sistema de Inventarios" 
        Height="500" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Título -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Sistema de Inventarios" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <TextBlock Text="Crear Nueva Cuenta" 
                       FontSize="16" 
                       HorizontalAlignment="Center"
                       Foreground="#FF666666"/>
        </StackPanel>
        
        <!-- Formulario de Registro -->
        <StackPanel Grid.Row="1" Margin="40,0">
            <Label Content="Correo Electrónico:"/>
            <TextBox x:Name="txtEmail" 
                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     TextChanged="txtEmail_TextChanged"/>
            
            <Label Content="Contraseña:"/>
            <PasswordBox x:Name="txtContraseña" 
                         PasswordChanged="txtContraseña_PasswordChanged"/>
            
            <Label Content="Confirmar Contraseña:"/>
            <PasswordBox x:Name="txtConfirmarContraseña" 
                         PasswordChanged="txtConfirmarContraseña_PasswordChanged"/>
            
            <!-- Términos y Condiciones -->
            <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Center">
                <CheckBox x:Name="chkTerminos" 
                          Checked="chkTerminos_Checked" 
                          Unchecked="chkTerminos_Unchecked"
                          Margin="0,0,5,0"/>
                <TextBlock Text="Acepto los " 
                           VerticalAlignment="Center"/>
                <TextBlock Text="términos y condiciones" 
                           Foreground="Blue" 
                           TextDecorations="Underline"
                           Cursor="Hand"
                           MouseLeftButtonDown="Terminos_MouseLeftButtonDown"
                           VerticalAlignment="Center"/>
            </StackPanel>
            
            <Button x:Name="btnRegistrarse" 
                    Content="Registrarse" 
                    Click="btnRegistrarse_Click"
                    Width="150"
                    Style="{StaticResource SuccessButton}"
                    IsEnabled="False"
                    Margin="0,20,0,0"/>
            
            <TextBlock x:Name="lblMensaje" 
                       Foreground="Red" 
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       TextWrapping="Wrap"
                       FontSize="12"/>
            
            <!-- Enlace a Iniciar Sesión -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <TextBlock Text="¿Ya tienes una cuenta? " 
                           VerticalAlignment="Center"/>
                <TextBlock Text="Iniciar Sesión" 
                           Foreground="Blue" 
                           TextDecorations="Underline"
                           Cursor="Hand"
                           MouseLeftButtonDown="IniciarSesion_MouseLeftButtonDown"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Pie de página -->
        <StackPanel Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <TextBlock Text="© 2024 Sistema de Inventarios" 
                       FontSize="10" 
                       Foreground="#FF999999"
                       Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>

